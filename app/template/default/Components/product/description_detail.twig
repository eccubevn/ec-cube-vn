{% if product.description_detail %}
  <div class="product-description description-detail {{class|default('')}}">
    {% if truncate is defined %}
      {{ product.description_detail|raw|nl2br|length > 90 ? 
      product.description_detail|raw|nl2br|slice(0, 90) ~ '...' : 
      product.description_detail|raw|nl2br  }}
    {% else %}
        {{ product.description_detail|raw|nl2br }}
    {% endif %}
  </div>
{% endif %}