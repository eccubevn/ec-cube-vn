<div class="item_visual main-product-image {{class|default('mb-3')}}">
  {% for ProductImage in product.ProductImage %}
    <div class="slide-item">
      <img src="{{ asset(ProductImage, 'save_image') }}" alt="{{ product.name }}">
    </div>
  {% else %}
    <div class="slide-item">
      <img src="{{ asset(''|no_image_product, 'save_image') }}" alt="{{ product.name }}"/>
    </div>
  {% endfor %}
</div>
<div class="product-image-thumbails d-none d-md-flex row no-gutters {{class|default('')}}">
  {% for ProductImage in product.ProductImage %}
    <div class="slideThumb col-3 text-center" data-index="{{ loop.index0 }}">
      <img src="{{ asset(ProductImage, 'save_image') }}" alt="{{ product.name }}">
    </div>
  {% endfor %}
</div>